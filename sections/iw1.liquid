<section class="instructions-widget-01-container ">
  <div class="instructions-widget-01">
  {% if section.settings.main-heading != blank %}<h2 class="main-heading">{{ section.settings.main-heading }}</h2>{% endif %}
  <div class="instructions-widget-01-wrapper {% if section.settings.image_position_desktop == 'left' %} image_left {% else %} image_right{% endif %} {% if section.settings.image_position_mobile == 'image_top' %} image_top{% else %} image_bottom{% endif %}">
    {% if section.settings.main_image != blank %}
      <div class="iw-01-image"><img src="{{ section.settings.main_image | image_url  }}"></div>
    {% endif %}
    <div class="iw-01-content">
      {% if section.settings.sub-heading != blank %}<div class="iw-01-subheading">{{ section.settings.sub-heading }}</div>{% endif %}
      {% if section.settings.heading != blank %}<div class="iw-01-heading">{{ section.settings.heading }}</div>{% endif %}
      {% if section.settings.description != blank %}<div class="iw-01-description">{{ section.settings.description }}</div>{% endif %}
      {% if section.settings.button_label != blank %}<div class="iw-01-button">{% if section.settings.button_link != blank %}<a href="{{ section.settings.button_link }}" title="{{ section.settings.button_label }}">{{ section.settings.button_label }}</a>{% else %}{{ section.settings.button_label }}{% endif %}</div>{% endif %}
    </div>
    
  </div>
 </div>   
</section>

<style>
   .instructions-widget-01-container{
    max-width:1600px;
    margin:0 auto;
  }
.instructions-widget-01{
  /* background: rgb(247 246 245 / 50%); */
  margin:100px 24px 0px 24px;
} 
 .instructions-widget-01 .main-heading {
    color: #272727;
    text-align: center;
    font-size: 32px;
    font-style: italic;
    font-weight: 300;
    line-height: 31.2px;
    font-family: ivypresto-headline, serif;
    margin-bottom: 48px;
}
.instructions-widget-01-wrapper{
  display: flex;
  align-items: center;
      justify-content: space-between;
  gap:20px;
} 
.iw-01-image{
  width:50%;
} 
.iw-01-image img{
  max-width:100%;
  width:100%;
}  
.iw-01-content{
    width: 100%;
        max-width: 50%;
} 
.iw-01-subheading{
  color: #272727;
  font-size: 16px;
  font-style: normal;
  font-weight: 400;
  line-height: 18px;
  letter-spacing: 0.32px;
  text-transform: uppercase;
  opacity: 0.5;
  margin-bottom:12px;
}   
  .iw-01-description ul {
    padding-left: 20px;
}
  .iw-01-description ul li:not(:last-child) {
    margin-bottom: 20px;
}
.iw-01-heading{
  color: #272727;
  font-family: ivypresto-headline, serif;
  font-size: 24px;
  font-style: italic;
  font-weight: 300;
  line-height: 31.2px;
  margin-bottom:20px;
}   
.iw-01-description{
  color: #272727;
  font-size: 16px;
  font-style: normal;
  font-weight: 400;
  line-height: 20.8px;
  margin-bottom:32px;
}  

.iw-01-button a{
    color: #F7F6F5;
    font-size: 15px;
    font-style: normal;
    font-weight: 500;
    line-height: normal;
    background: #272727;
    min-height: 40px;
    height: 100%;
    display: inline-block;
    text-align: center;
    padding: 10px 20px;
    min-width: 223px;
  text-decoration:none;
}    
.instructions-widget-01-wrapper.image_right {
    flex-direction: row-reverse;
}
  .instructions-widget-01-wrapper.image_left {
    flex-direction: row;
}
@media only screen and (max-width: 768px) {
.instructions-widget-01-wrapper.image_left.image_top, .instructions-widget-01-wrapper.image_right.image_top {
    flex-direction: column;
}
  .instructions-widget-01-wrapper.image_left.image_bottom, .instructions-widget-01-wrapper.image_right.image_bottom {
    flex-direction: column-reverse;
}
 
  .instructions-widget-01 {
    margin: 0;
  }
  
  
.iw-01-description {
    margin-bottom: 0;
}
  .iw-01-image {
    width: 100%;
            padding: 0 8px;
  }

  .iw-01-content {
    max-width: 100%;
    padding: 48px 16px 0px;
            margin-left: 0;
  }

  .iw-01-subheading {
    margin-bottom: 12px;
    font-size: 15px;
  }

  .iw-01-heading {
    margin-bottom: 8px;
  }

  .iw-01-description {
    font-size: 15px;
    line-height: 19.2px;
  }
}
</style>

{% schema %}
  {
  "name": "instructions widget 01",
  "settings": [
     {
      "type": "text",
      "id": "main-heading",
      "label": "Main Heading"
    },
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Main image"
    },
    {
      "type": "select",
      "id": "image_position_desktop",
      "label": "Image position Desktop",
      "options": [
        
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "select",
      "id": "image_position_mobile",
      "label": "Image position Mobile",
      "options": [
        {
          "value": "image_top",
          "label": "Top"
        },
        {
          "value": "image_bottom",
          "label": "Bottom"
        }
      ],
      "default": "image_top"
    },
    {
      "type": "text",
      "id": "sub-heading",
      "label": "Sub-heading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "instructions widget 01"
    }
  ]
}  
{% endschema %}

